<!DOCTYPE html>
<html lang="en">
    <head>
        {{> head}}
    </head>
    <body>
        {{> debug}}
        <section>
            <div class="container">
                {{> header}}
                <div class="row">
                    <div class="col-sm-12">
                        <h1>Confirmation</h1>
                        <p>
                            Thank you for your purchase. A confirmation email will be sent to {{summary.email}} shortly. 
                        </p>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Your Cart</h3>
                            </div>
                            <div class="panel-body">
                                <!-- show the cart -->
                                <div class="simpleCart_items"></div>
                                <h4>Total: <span class="simpleCart_total"></span></h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <h4>Shipping Information</h4>
                        {{#summary.address}}
                            {{name.first}} {{name.last}}<br />
                            {{street1}}<br />
                            {{#street2}}{{.}}<br/>{{/street2}}
                            {{city}}, {{state}} {{zip}}
                        {{/summary.address}}
                    </div>
                    <div class="col-sm-6">
                        <h4>Billing Information</h4>
                        {{#summary.payment}}
                            Credit Card: {{creditCard.number}} <br />
                            Expires: {{creditCard.expiration}}
                        {{/summary.payment}}
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <a href="/orders" class="btn btn-lg btn-default ignore">Your Orders</a>
                        <a href="/" class="btn btn-lg btn-default ignore">Start Over</a>
                    </div>
                </div>
            </div>
        </section>

        {{> footer}}

        <script src="./library/simplecart-js/simpleCart.min.js"></script>
        <script src="./js/script.min.js"></script>
        <script src="./js/confirmation.min.js"></script>
    </body>
</html>