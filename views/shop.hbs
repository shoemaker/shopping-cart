<!DOCTYPE html>
<html lang="en">
    <head>
        {{> head}}
    </head>
    <body>
        {{> debug}}
        <section>
            <div class="container">
                {{> header}}
                <div class="row">
                    <div class="col-sm-8">
                        <h1>{{title}}</h1>
                    </div>
                    <div class="col-sm-4">
                        <div class="pull-right">
                            <button class="btn btn-primary" data-toggle="modal" data-target="#cartModal"><i class="fa fa-shopping-cart fa-2"></i>&nbsp;&nbsp;<span class="simpleCart_quantity"></span></button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div id="msgContainer"></div>
                        {{#books}}
                        <div class="simpleCart_shelfItem">
                            <div class="media">
                                <a class="pull-left" href="{{amazonUrl}}">
                                    <img class="media-object img-thumbnail" data-src="{{coverImageUrl}}" src="{{coverImageUrl}}" alt="{{title}}" />
                                </a>
                                <div class="media-body">
                                    <h4 class="item_name media-heading book-title">{{title}}</h4>
                                    <p>
                                        By {{author}} <br />
                                        <span class="item_price">${{price}}</span><br />
                                        <input type="text" class="form-control item_Quantity" id="{{id}}Qty" value="1" />
                                        <a class="item_add btn btn-default btn-sm ignore" href="javascript:;">Add to Cart</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        {{/books}}
                        <div style="clear:both"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="pull-right">
                            <a id="checkoutMain" href="/payment" class="btn btn-success btn-lg ignore">Checkout</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Shopping Cart Modal -->
        <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title" id="myModalLabel">Shopping Cart</h4>
                    </div>
                    <div class="modal-body">
                        <!-- show the cart -->
                        <div class="simpleCart_items"></div>
                        <h4>Total: <span class="simpleCart_total"></span></h4>
                    </div>
                    <div class="modal-footer">
                        <!-- button to empty the cart -->
                        <a href="javascript:;" class="simpleCart_empty btn btn-default ignore">Empty Cart</a>
                        <a id="checkoutModal" href="/payment" class="btn btn-success ignore">Checkout</a>
                    </div>
                </div>
            </div>
        </div>


        {{> footer}}
        <script src="./library/simplecart-js/simpleCart.min.js"></script>
        <script src="./js/script.min.js"></script>
        <script src="./js/shop.min.js"></script>
    </body>
</html>