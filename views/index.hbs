<!DOCTYPE html>
<html lang="en">
    <head>
        {{> head}}
    </head>
    <body>
        {{> debug}}
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-sm-8">
                        <h1>{{title}}</h1>
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-primary" data-toggle="modal" data-target="#cartModal"><i class="fa fa-shopping-cart fa-2"></i>&nbsp;&nbsp;<span class="simpleCart_quantity"></span></button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        {{#books}}
                        <div class="simpleCart_shelfItem">
                            <div class="media">
                                <a class="pull-left" href="{{amazonUrl}}">
                                    <img class="media-object img-thumbnail" data-src="{{coverImageUrl}}" src="{{coverImageUrl}}" alt="{{title}}" />
                                </a>
                                <div class="media-body">
                                    <h4 class="item_name media-heading book-title">{{title}}</h4>
                                    <p>
                                        By {{author}} <br />
                                        <span class="item_price">${{price}}</span><br />
                                        <input type="text" class="form-control item_Quantity" id="{{id}}Qty" value="1" />
                                        <a class="item_add btn btn-success btn-sm ignore" href="javascript:;">Add to Cart</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        {{/books}}
                        <div style="clear:both"></div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Shopping Cart Modal -->
        <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title" id="myModalLabel">Shopping Cart</h4>
                    </div>
                    <div class="modal-body">
                        <!-- show the cart -->
                        <div class="simpleCart_items"></div>
                        <br />
                        Total: <span class="simpleCart_total"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <!-- button to empty the cart -->
                        <a href="javascript:;" class="simpleCart_empty btn btn-info ignore">Empty Cart</a>
                    </div>
                </div>
            </div>
        </div>


        {{> footer}}
        <script src="./library/simplecart-js/simpleCart.min.js"></script>
        <script>
            simpleCart({
                cartColumns: [
                    { attr: "name" , label: "Name" },
                    { attr: "price" , label: "Price", view: 'currency' },
                    { attr: "quantity" , label: "Qty" },
                    { attr: "total" , label: "SubTotal", view: 'currency' },
                    { view: "remove" , text: "Remove" , label: false },
                    { view: "foo", text: "", label: false }
                ]
          });
        </script>

        <script src="./js/script.min.js"></script>
    </body>
</html>